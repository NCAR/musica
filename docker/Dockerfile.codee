FROM fedora:latest

ARG BUILD_TYPE=Release

RUN dnf -y update \
    && dnf -y install \
        cmake \
        gcc-c++ \
        gfortran \
        gdb \
        git \
        lapack-devel \
        lcov \
        make \
        ninja \
        netcdf-fortran-devel \
        python \
        valgrind \
        tree \
    && dnf clean all

COPY codee /usr/local/codee

ENV PATH="/usr/local/codee/codee-2025.4.6-linux-aarch64/bin:${PATH}"

# Copy the musica code
COPY . musica

# Build
RUN cd musica \
    && cmake -S . \
             -B build \
             -D CMAKE_BUILD_TYPE=${BUILD_TYPE} \
             -D MUSICA_BUILD_FORTRAN_INTERFACE=ON \
             -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -G "Ninja" 
    

WORKDIR musica/build