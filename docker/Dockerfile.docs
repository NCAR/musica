FROM fedora:37

RUN dnf -y update \
    && dnf -y install \
        doxygen \
        gcc-c++ \
        gcc \
        gdb \
        git \
        cmake \
        make \
        lcov \
        valgrind \
        python3 \
        python3-pip \
    && dnf clean all

COPY . /musica/

RUN pip3 install -r /musica/docs/requirements.txt

ARG SUFFIX=""
ENV SWITCHER_SUFFIX=$SUFFIX

RUN echo "The suffix is '$SWITCHER_SUFFIX'"

RUN mkdir /build \
      && cd /build \
      && cmake -D MUSICA_BUILD_DOCS=ON \
               /musica \
      && make docs

WORKDIR /build

