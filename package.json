{
  "name": "musica-addon",
  "version": "0.14.1",
  "description": "Native Node.js addon for MUSICA atmospheric chemistry modeling",
  "main": "./javascript/index.js",
  "exports": {
    ".": "./javascript/index.js",
    "./wasm": "./javascript/wasm/index.js"
  },
  "scripts": {
    "build": "cmake-js -p 4 compile --CDMUSICA_ENABLE_JAVASCRIPT=ON --CDMUSICA_ENABLE_PYTHON_LIBRARY=OFF --CDMUSICA_ENABLE_TUVX=OFF --CDMUSICA_ENABLE_CARMA=OFF --CDMUSICA_ENABLE_TESTS=OFF --CDMUSICA_ENABLE_PIC=ON",
    "build:wasm": "emcmake cmake -S . -B build-wasm -DCMAKE_BUILD_TYPE=Release -DMUSICA_ENABLE_JAVASCRIPT=ON -DMUSICA_ENABLE_TUVX=OFF -DMUSICA_ENABLE_CARMA=OFF && cmake --build build-wasm",
    "sync-version": "node scripts/extract_version.js sync",
    "test": "node --test 'javascript/tests/**/*.test.js'",
    "test:integration": "node --test 'javascript/tests/integration/*.test.js'",
    "test:unit": "node --test 'javascript/tests/unit/**/*.test.js'",
    "test:unit:wasm": "node --test javascript/tests/unit/wasm/version.test.js",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reports-dir=javascript-coverage node --test javascript/tests/**/*.test.js"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "musica": "^1.0.0",
    "node-addon-api": "^8.5.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "cmake-js": "^7.3.0"
  },
  "cmake-js": {
    "runtime": "node",
    "runtimeVersion": "20.0.0"
  }
}