{
  "name": "@ncar/musica",
  "version": "0.14.4",
  "description": "The Multiscale Interface for Chemistry and Aerosols (MUSICA) javascript library",
  "type": "module",
  "main": "./javascript/index.js",
  "readmeCommets": [
    "NPM uses the root readme to display package information, so we copy the javascript readme",
    "to the root on publish. The below path is correct."
  ],
  "readme": "README.md",
  "files": [
    "configs",
    "!configs/tuvx",
    "javascript/**/*.js",
    "!javascript/tests",
    "!javascript/src",
    "javascript/wasm/*.wasm",
    "javascript/wasm/example.html",
    "LICENSE"
  ],
  "bin": {
    "musica-example": "javascript/tools/serve.js"
  },
  "scripts": {
    "build": "npm run build:wasm",
    "build:wasm": "emcmake cmake -S . -B build-wasm -DCMAKE_BUILD_TYPE=Release -DMUSICA_ENABLE_JAVASCRIPT=ON -DMUSICA_ENABLE_TUVX=OFF -DMUSICA_ENABLE_CARMA=OFF -DMUSICA_ENABLE_TESTS=OFF && cmake --build build-wasm",
    "test": "node --test javascript/tests/unit/*.test.js javascript/tests/integration/*.test.js",
    "test:integration": "node --test javascript/tests/integration/*.test.js",
    "test:unit": "node --test javascript/tests/unit/**/*.test.js",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reports-dir=javascript-coverage node --test javascript/tests/**/*.test.js",
    "example": "node javascript/tools/serve.js",
    "format": "npm run format:js && npm run format:cpp",
    "format:js": "prettier --write 'javascript/**/*.js'",
    "format:cpp": "find javascript -type f \\( -name '*.cpp' -or -name '*.hpp' -or -name '*.c' -or -name '*.h' \\) -exec clang-format -i --style=file --verbose {} +"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NCAR/musica.git"
  },
  "keywords": [
    "atmospheric-chemistry",
    "chemistry",
    "aerosols",
    "wasm",
    "webassembly",
    "musica",
    "micm"
  ],
  "author": "NCAR",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NCAR/musica/issues"
  },
  "homepage": "https://ncar.github.io/musica/",
  "devDependencies": {
    "c8": "^10.1.3",
    "prettier": "^3.8.0"
  }
}
